<div class="row">
	

		<div class="col-md-9">

		<br/>
		<h1><%= @artist.name  %></h1>
		<br/>
      
	      <% @artist.albums.each do |album| %>
	        
	        <div class = "col-sm-6 col-md-4">
	        	<div class="thumbnail">

	        		
	        		<img src="<%= album.image_url%>">
			         <div align="center">
			          	
			          	<div class="caption">
			          		
				          	<%= album.name  %> <br/>

	    				</div>

		          	</div>

	        	</div>
	        </div>



	      <% end %>

	     </div>

	     <div class="col-md-3">
	     	<div class="embed-responsive embed-responsive-16by9">
	      		<img class="img-responsive" src="<%= @artist.image_url%>">
	      	</div>
	     </div>

</div>
     